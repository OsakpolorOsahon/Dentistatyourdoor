{
  "version": 2,
  "buildCommand": "vite build",
  "outputDirectory": "client/dist",
  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node@20.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}